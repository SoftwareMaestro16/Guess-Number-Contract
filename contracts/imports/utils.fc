() msg::send_withdraw(slice sender) impure inline {
    raw_reserve(min_tons_for_storage, 0);
    var msg = begin_cell()
                .store_uint(0x10, 6) 
                .store_slice(sender)
                .store_coins(0)
                .store_uint(0, 1 + 4 + 4 + 64 + 32 + 1 + 1)
              .end_cell();
    send_raw_message(msg, 128);
}

